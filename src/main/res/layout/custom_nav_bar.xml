<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_page_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:theme="@style/AppTheme.AppBarOverlay">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_nav_bar_image"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_userprofile" />


    <TextView
        android:id="@+id/custom_nav_bar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/custom_nav_bar_image"
        android:text="Heii"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_nav_bar_lastSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_nav_bar_text"
        android:layout_toEndOf="@+id/custom_nav_bar_image"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text=""
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>
